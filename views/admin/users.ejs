<tbody>
    <% users.forEach(function(u) { %>
        <tr>
            <td data-label="Username"><%= u.username %></td>
            <td data-label="Email"><%= u.email %></td>
            <td data-label="Role"><%= u.role %></td>
            <td data-label="Verified"><%= u.isVerified ? 'Yes' : 'No' %></td>
            <td data-label="Created At"><%= u.createdAt.toLocaleDateString() %></td>
            <td data-label="Actions">
                <a href="/admin/users/<%= u.id %>/edit" class="btn">Edit</a>
                <% if (currentUser.id !== u.id.toString()) { %>
                <form action="/admin/users/<%= u.id %>/delete?_csrf=<%= csrfToken %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <% } %>
            </td>
        </tr>
    <% }); %>
</tbody>