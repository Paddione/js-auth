<%- include('../partials/header') %>

<h2>Manage Users</h2>
<% if (users.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Verified</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(u) { %>
                <tr>
                    <td><%= u.username %></td>
                    <td><%= u.email %></td>
                    <td><%= u.role %></td>
                    <td><%= u.isVerified ? 'Yes' : 'No' %></td>
                    <td><%= u.createdAt.toLocaleDateString() %></td>
                    <td>
                        <a href="/admin/users/<%= u.id %>/edit" class="btn">Edit</a>
                        <% if (currentUser.id !== u.id.toString()) { %> <form action="/admin/users/<%= u.id %>/delete?_csrf=<%= csrfToken %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No users found.</p>
<% } %>

<%- include('../partials/footer') %>